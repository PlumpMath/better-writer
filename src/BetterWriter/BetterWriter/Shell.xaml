<Window x:Class="BetterWriter.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/CompositeWPF"
        Title="Better Writer" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#EAECF5">
    <Grid Margin="15 15 15 15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <ContentControl Grid.Column="0" prism:RegionManager.RegionName="EditorModule" />
    </Grid>
</Window>
